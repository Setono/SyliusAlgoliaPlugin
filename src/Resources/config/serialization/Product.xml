<?xml version="1.0" ?>
<serializer xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://symfony.com/schema/dic/serializer-mapping"
            xsi:schemaLocation="http://symfony.com/schema/dic/serializer-mapping https://symfony.com/schema/dic/serializer-mapping/serializer-mapping-1.0.xsd"
>
    <class name="Setono\SyliusAlgoliaPlugin\Document\Product">
        <attribute name="name">
            <group>setono:sylius-algolia:document</group>
        </attribute>

        <attribute name="createdAt">
            <group>setono:sylius-algolia:document</group>
        </attribute>

        <attribute name="url">
            <group>setono:sylius-algolia:document</group>
        </attribute>

        <attribute name="primaryImageUrl">
            <group>setono:sylius-algolia:document</group>
        </attribute>

        <attribute name="imageUrls">
            <group>setono:sylius-algolia:document</group>
        </attribute>

        <attribute name="taxonCodes">
            <group>setono:sylius-algolia:document</group>
        </attribute>

        <attribute name="taxons">
            <group>setono:sylius-algolia:document</group>
        </attribute>

        <attribute name="currency">
            <group>setono:sylius-algolia:document</group>
        </attribute>

        <attribute name="price">
            <group>setono:sylius-algolia:document</group>
        </attribute>

        <attribute name="originalPrice">
            <group>setono:sylius-algolia:document</group>
        </attribute>

        <attribute name="isOnSale" serialized-name="onSale">
            <group>setono:sylius-algolia:document</group>
        </attribute>

        <attribute name="options">
            <group>setono:sylius-algolia:document</group>
        </attribute>
    </class>
</serializer>
