<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="setono_sylius_algolia.data_mapper.composite"
                 class="Setono\SyliusAlgoliaPlugin\DataMapper\CompositeDataMapper"/>

        <service id="setono_sylius_algolia.data_mapper.product"
                 class="Setono\SyliusAlgoliaPlugin\DataMapper\ProductDataMapper">
            <argument type="service" id="sylius.product_variant_resolver.default"/>

            <tag name="setono_sylius_algolia.data_mapper" priority="-100"/>
        </service>

        <service id="setono_sylius_algolia.data_mapper.url"
                 class="Setono\SyliusAlgoliaPlugin\DataMapper\UrlDataMapper">
            <argument type="service" id="router"/>

            <tag name="setono_sylius_algolia.data_mapper" priority="-90"/>
        </service>

        <service id="setono_sylius_algolia.data_mapper.image_url"
                 class="Setono\SyliusAlgoliaPlugin\DataMapper\ImageUrlDataMapper">
            <argument type="service" id="liip_imagine.cache.manager"/>

            <tag name="setono_sylius_algolia.data_mapper" priority="-80"/>
        </service>
    </services>
</container>
