           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="setono_sylius_algolia.config.index_registry"
                 class="Setono\SyliusAlgoliaPlugin\Config\IndexRegistry">
